<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <LangVersion>latest</LangVersion>

        <Description>Core mod and API for Among Us</Description>

        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

        <!-- SourceLink -->
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
        <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
        <Compile Include="..\Reactor.Networking.Shared\**\*.cs" LinkBase="Reactor.Networking.Shared" Visible="false" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="Assets\**\*" Exclude="Assets\icon.png" />
    </ItemGroup>

    <Import Project="../AmongUs.props" />
</Project>
